@page "/{game}"
@using SkiaSharp.Views.Blazor
@using WebGal.Global

@* <div id ="screen" style="display: flex; height: 100vh; flex-direction: column; margin: 0;"> *@
<div id="screen" @oncontextmenu:preventDefault="true"
	style="margin: 0 auto; width: min-content; height: 100%; display: flex; flex-direction: column; justify-content: center;">
	<SKGLView @ref=(this._skiaView) @onmouseup="OnMouseUp" @onmousedown="OnMouseDown" OnPaintSurface="OnPaintSurface"
		onmousemove="getMousePosition(event)" IgnorePixelScaling="true" EnableRenderLoop="true"
		style="@($"width: {SceneConfig.DefaultWidth}px; height: {SceneConfig.DefaultHeight}px; transform: scale({Scale});border: 2px solid;")" />
</div>

